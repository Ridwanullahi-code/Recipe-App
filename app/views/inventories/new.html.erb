
<div class="container">

<%= form_with model: @inventory, url: inventories_path, method: :post, local: true, scope: :inventory do |form| %>
  <h1 class="header">Add Your Inventory!</h1>
  <div>
    <div>
      <%= form.text_field :name, placeholder: 'Name', class: "form-field"  %>
    </div>
      <%= form.submit "Add Inventory", class: "submit" %>
  </div>
<% end %>
</div>
