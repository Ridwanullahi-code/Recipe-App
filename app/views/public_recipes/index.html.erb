<section class="recipes public">
  <% if @public_recipes.empty? %>
    <p class="empty-recipes">No public recipes.</p>
  <% else %>
    <% @public_recipes.each do |recipe| %>
      <div class="recipe-item">
        <div class="recipe-desc slow">
          <div class="foodownercombo">
          <h4 class="linkz"><%= link_to recipe.name, recipe_path(recipe) %></h4>
          <p>By: <%= recipe.user.name %></p>
          </div>
          <div class="totalsss">
          <p>Total food items: <%= recipe.all_food_items %></p>
          <p>Total price: <%= number_to_currency(recipe.total_price) %></p>
          </div>
        </div>
        <div class="recipe-title-delete">
          <h4 class="linkz"></h4>
        </div>
      </div>
    <% end %>
  <% end %>
</section>
